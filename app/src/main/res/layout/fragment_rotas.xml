<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bus"/>

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapa 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bus"/>

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapa 2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="50dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bus"/>

            <TextView
                android:id="@+id/step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapa 3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Linhas entre as etapas -->
    <View
        android:layout_width="2dp"
        android:layout_height="200dp"
        android:background="#000000"
        android:layout_marginStart="62dp"
        android:layout_alignStart="@id/circle1"
        android:layout_alignTop="@id/circle1"
        android:layout_alignBottom="@id/circle2"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        tools:ignore="NotSibling" />

    <View
        android:layout_width="2dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:layout_marginStart="62dp"
        android:layout_alignStart="@id/circle1"
        android:layout_alignTop="@id/circle2"
        android:layout_alignBottom="@id/circle3"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        tools:ignore="NotSibling" />

</RelativeLayout>
